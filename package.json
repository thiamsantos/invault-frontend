{
  "name": "invault",
  "version": "1.0.0",
  "description": "Invault frontend",
  "private": true,
  "scripts": {
    "format": "prettier --write \"src/**/*.js\"",
    "format-check": "prettier-check \"src/**/*.js\"",
    "lint": "xo --fix",
    "lint-check": "xo",
    "test": "jest",
    "build": "cross-env NODE_ENV=development webpack --mode development",
    "build:watch": "npm run build -- -w --hide-modules",
    "build:prod": "cross-env NODE_ENV=production webpack --mode production",
    "serve": "node browsersync.js",
    "start": "run-p -r serve build:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/invault-team/frontend.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/invault-team/frontend/issues"
  },
  "homepage": "https://github.com/invault-team/frontend#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-lodash": "^3.3.4",
    "browser-sync": "^2.26.0",
    "clean-webpack-plugin": "^0.1.19",
    "connect-history-api-fallback": "^1.5.0",
    "cross-env": "^5.2.0",
    "dotenv-webpack": "^1.5.7",
    "eslint": "^5.6.1",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "favicons-webpack-plugin": "0.0.9",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^1.2.1",
    "jest": "^23.6.0",
    "lodash-webpack-plugin": "^0.11.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.2",
    "prettier-check": "^2.0.0",
    "svg-url-loader": "^2.3.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@material-ui/core": "^3.2.0",
    "@material-ui/icons": "^3.0.1",
    "apollo-boost": "^0.1.16",
    "eslint-plugin-react-hooks": "0.0.0",
    "formik": "^1.3.1",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "lodash": "^4.17.11",
    "react": "next",
    "react-apollo": "^2.2.4",
    "react-dom": "next",
    "react-helmet": "^5.2.0",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^4.3.1"
  },
  "xo": {
    "parser": "babel-eslint",
    "space": true,
    "semicolon": false,
    "envs": [
      "browser",
      "jest"
    ],
    "extends": "xo-react",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "react/jsx-tag-spacing": 0,
      "react/jsx-indent": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/button-has-type": 0,
      "react/forbid-component-props": 0,
      "react/prop-types": 0,
      "react/require-default-props": 0,
      "import/no-unresolved": 1,
      "new-cap": 0,
      "react-hooks/rules-of-hooks": "error"
    },
    "prettier": true,
    "settings": {
      "react": {
        "version": "16.5.2"
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test && npm run build:prod"
    }
  }
}
